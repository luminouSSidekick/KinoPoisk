<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="H1" parent="RobotoBold">
        <item  name="android:textSize">26sp</item>
        <item  name="lineHeight">32sp</item>
    </style>

    <style name="Title" parent="RobotoBold">
        <item  name="android:textSize">18sp</item>
        <item  name="lineHeight">22sp</item>
    </style>

    <style name="Rating" parent="RobotoBold">
        <item  name="android:textSize">24sp</item>
        <item  name="lineHeight">28sp</item>
    </style>

    <style name="RatingSource" parent="RobotoBold">
        <item  name="android:textSize">16sp</item>
        <item  name="lineHeight">16sp</item>
    </style>

    <style name="H2" parent="RobotoBold">
        <item  name="android:textSize">20sp</item>
        <item  name="lineHeight">22sp</item>
    </style>

    <style name="H3" parent="RobotoBold">
        <item  name="android:textSize">16sp</item>
        <item  name="lineHeight">20sp</item>
    </style>

    <style name="Body1" parent="RobotoRegular">
        <item  name="android:textSize">16sp</item>
        <item  name="lineHeight">20sp</item>
    </style>

    <style name="Body2" parent="RobotoRegular">
        <item  name="android:textSize">14sp</item>
        <item  name="lineHeight">20sp</item>
    </style>

    <style name="Subtitle1" parent="RobotoMedium">
        <item  name="android:textSize">16sp</item>
        <item  name="lineHeight">16sp</item>
    </style>

    <style name="Subtitle2" parent="RobotoRegular">
        <item  name="android:textSize">16sp</item>
        <item  name="lineHeight">20sp</item>
    </style>

    <style name="H2.Main" parent="H2">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="H1.Main" parent="H1">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Body1.Main" parent="Body1">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Subtitle1.Main" parent="Subtitle1">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Subtitle2.Main" parent="Subtitle2">
        <item name="android:textColor">@color/genre_text</item>
    </style>

    <style name="Rating.Main" parent="Rating">
        <item name="android:textColor">@color/rating</item>
    </style>

    <style name="RatingSource.Main" parent="RatingSource">
        <item name="android:textColor">@color/rating</item>
    </style>

    <style name="Body2.Main" parent="Body2">
        <item name="android:textColor">@color/text</item>
    </style>
</resources>